{
	"name": "hapi-logger",
	"description": "A Hapi plugin for writing logs via bunyan",
	"contributors": [
		"Mac Angell <mac.ang311@gmail.com>"
	],
	"version": "2.0.0",
	"dependencies": {
		"bunyan": "1.x.x",
		"hoek": "^3.0.4",
		"lodash": "^4.17.4"
	},
	"devDependencies": {
		"blanket": "1.x.x",
		"boom": "^3.0.0",
		"coveralls": "2.x.x",
		"hapi": "^16.x.x",
		"jshint": "2.x.x",
		"mocha": "1.x.x",
		"mocha-lcov-reporter": "0.x.x",
		"node-dependencies": "0.x.x",
		"travis-cov": "0.x.x"
	},
	"peerDependencies": {
		"hapi": "^16.x.x"
	},
	"keywords": [
		"hapi",
		"plugin",
		"log",
		"logging",
		"logger",
		"json",
		"bunyan"
	],
	"engines": {
		"node": ">=4.8.0"
	},
	"main": "./lib/hapi-logger.js",
	"repository": {
		"type": "git",
		"url": "git@github.com:mac-/hapi-logger.git"
	},
	"scripts": {
		"test": "make test && make test-cov && make test-lcov | ./node_modules/coveralls/bin/coveralls.js"
	},
	"config": {
		"blanket": {
			"pattern": "//^((?!/node_modules/)(?!/test/).)*$/ig",
			"onlyCwd": true,
			"data-cover-flags": {
				"branchTracking": true
			}
		},
		"travis-cov": {
			"threshold": 90
		}
	},
	"license": "MIT"
}
